#Join two columns and seperate it with '_' and create a new column. Also remove the column

within(HC1, C <- paste(Text, Unit, sep='_'))

HC2<- within(HC1, Category <- paste(Text, Unit, sep='_'))

HC3 <- subset(HC2, select = -c(Text,Unit))
